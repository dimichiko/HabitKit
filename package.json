{
  "name": "habitkit-clone",
  "version": "1.0.0",
  "description": "HabitKit Clone - Full Stack Application with React Frontend and NestJS Backend",
  "private": true,
  "workspaces": [
    "client",
    "server-nest"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server-nest && npm run start:dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server-nest && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server-nest && npm install",
    "clean": "rm -rf node_modules client/node_modules server-nest/node_modules",
    "start:client": "cd client && npm run preview",
    "start:server": "cd server-nest && npm run start:prod",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server-nest && npm run lint",
    "lint:fix": "npm run lint:fix:client && npm run lint:fix:server",
    "lint:fix:client": "cd client && npm run lint:fix",
    "lint:fix:server": "cd server-nest && npm run lint",
    "format": "npm run format:client && npm run format:server",
    "format:client": "cd client && npm run format",
    "format:server": "cd server-nest && npm run format",
    "test": "npm run test:server",
    "test:server": "cd server-nest && npm run test",
    "health": "curl -f http://localhost:5051/api/health || echo 'Server not running'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "react",
    "nestjs",
    "typescript",
    "mongodb",
    "habits",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT"
}
